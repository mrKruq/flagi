<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/kolor_tla"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewPolecenie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/czcionka"
        android:layout_margin="16dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:text="@string/polecenie" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:layout_margin="@dimen/margines_przyciski"
            android:onClick="zlaOdpowiedz"
            />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_700"
            android:onClick="dobraOdpowiedz"
            android:layout_margin="@dimen/margines_przyciski"
            />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:onClick="dobraOdpowiedz"
            android:layout_margin="@dimen/margines_przyciski"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FF0000"
            android:layout_margin="@dimen/margines_przyciski"
            android:onClick="zlaOdpowiedz"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFF000"
            android:onClick="dobraOdpowiedz"
            android:layout_margin="@dimen/margines_przyciski"
 />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#000FFF"
            android:onClick="dobraOdpowiedz"
            android:layout_margin="@dimen/margines_przyciski"
             />
    </LinearLayout>

</LinearLayout>